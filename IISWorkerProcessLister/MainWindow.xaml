<controls:MetroWindow x:Class="IISWorkerProcessLister.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      ResizeMode="CanMinimize"
                      Height="350" Width="1024" Icon="server.ico"
                      WindowStartupLocation="CenterScreen"
                      Style="{DynamicResource VSWindowStyleKey}">
    <Grid>
        <DataGrid Name="WorkerProcessesDataGrid" Margin="0" AutoGenerateColumns="False"
                  GridLinesVisibility="Horizontal" CanUserAddRows="False" CanUserDeleteRows="False"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Application Pool Name" Binding="{Binding Value}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Process Id" Binding="{Binding Key}" IsReadOnly="True" Width="*" />-->
                <DataGridTextColumn Header="Application Pool Name" Binding="{Binding AppPoolName}" IsReadOnly="True"
                                    Width="200" />
                <DataGridTextColumn Header="Process Id" Binding="{Binding ProcessId}" IsReadOnly="True" Width="100" />
                <DataGridTextColumn Header="Site / Application" Binding="{Binding Applications}" IsReadOnly="True"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="State" Binding="{Binding State}" IsReadOnly="True" Width="100" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu Name="StoryMenu" StaysOpen="True">
                    <!--<MenuItem Header="Recycle" Command="{Binding RecycleCommand}" />
                    <MenuItem Header="Stop" Command="{Binding StopCommand}" />-->
                    <MenuItem Header="Kill Process" Click="KillProcessClick" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</controls:MetroWindow>